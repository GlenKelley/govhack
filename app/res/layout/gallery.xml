    android:id="@+id/gallery"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:numColumns="1"
    android:verticalSpacing="20dp"
    android:horizontalSpacing="20dp"
    android:stretchMode="columnWidth"
